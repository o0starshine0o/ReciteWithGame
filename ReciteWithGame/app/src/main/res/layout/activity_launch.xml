<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_launch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/launch"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_init_lexicon"
        android:layout_above="@+id/tv_lexicon_progress"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/ts_normal"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_lexicon_progress"
        android:layout_above="@+id/tv_word_progress"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/ts_big" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_word_progress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/ts_bigger"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>